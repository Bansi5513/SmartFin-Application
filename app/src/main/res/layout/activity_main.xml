<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/top_bg"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@drawable/home_screen_top_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bottom_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/home_screen_bottom_bg" />

    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/budgetIcon"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            app:srcCompat="@drawable/budget_icon_9"
            app:tint="#FFFFFF" />

        <ImageView
            android:id="@+id/expenseIcon"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            app:srcCompat="@drawable/expense_icon_1"
            app:tint="#FFFFFF" />

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/home_icon_4"
            app:tint="#FFFFFF" />

        <ImageView
            android:id="@+id/goalIcon"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            app:srcCompat="@drawable/goal_icon_3"
            app:tint="#FFFFFF" />

        <ImageView
            android:id="@+id/insightIcon"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            app:srcCompat="@drawable/insight_icon_4"
            app:tint="#FFFFFF" />

    </LinearLayout>

    <ImageView
        android:id="@+id/atm_card"
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bg"
        app:srcCompat="@drawable/temp_atm_card" />

    <ImageView
        android:id="@+id/profilePic_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/white_circle" />

    <ImageView
        android:id="@+id/profilePic_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/profilePic_1"
        app:layout_constraintEnd_toEndOf="@+id/profilePic_1"
        app:layout_constraintStart_toStartOf="@+id/profilePic_1"
        app:layout_constraintTop_toTopOf="@+id/profilePic_1"
        app:srcCompat="@drawable/username_icon" />

    <TextView
        android:id="@+id/scrnTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="DASHBOARD"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/balance_card"
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/top_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/balance_card_white" />

    <ImageView
        android:id="@+id/income_card"
        android:layout_width="145dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/balance_card"
        app:layout_constraintStart_toStartOf="@+id/balance_card"
        app:srcCompat="@drawable/income_card" />

    <ImageView
        android:id="@+id/expense_card"
        android:layout_width="145dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/balance_card"
        app:layout_constraintEnd_toEndOf="@+id/balance_card"
        app:srcCompat="@drawable/expense_card" />

    <TextView
        android:id="@+id/balanceAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="$4,000"
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/balance_card"
        app:layout_constraintTop_toTopOf="@+id/balance_card" />

    <TextView
        android:id="@+id/incomeAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:text="$6,400"
        android:textColor="#000000"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/income_card"
        app:layout_constraintStart_toStartOf="@+id/income_card" />

    <TextView
        android:id="@+id/expensesAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:text="$4,400"
        android:textColor="#000000"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/expense_card"
        app:layout_constraintStart_toStartOf="@+id/expense_card" />

    <TextView
        android:id="@+id/availableBalancetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"
        android:text="Available Balance"
        android:textColor="#777777"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/balance_card"
        app:layout_constraintTop_toTopOf="@+id/balance_card" />

    <TextView
        android:id="@+id/incomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Income"
        android:textColor="#575757"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/income_card"
        app:layout_constraintTop_toTopOf="@+id/income_card" />

    <TextView
        android:id="@+id/expenseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Expenses"
        android:textColor="#575757"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/expense_card"
        app:layout_constraintTop_toTopOf="@+id/expense_card" />

    <Spinner
        android:id="@+id/currencySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="-30dp"
        app:layout_constraintEnd_toEndOf="@+id/balance_card"
        app:layout_constraintTop_toTopOf="@+id/balance_card" />


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/bottom_bg"
        app:layout_constraintStart_toStartOf="parent">

        <GridLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="6"
            android:rowCount="1"
            app:layout_constraintBottom_toTopOf="@+id/bottom_bg"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="0"
                android:layout_gravity="fill"
                android:layout_margin="15dp"
                app:cardBackgroundColor="#F6F6F6"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">

                    <ImageView
                        android:id="@+id/logoImage1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/netflix_logo" />

                    <TextView
                        android:id="@+id/appName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Netflix"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/category1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entertainment"
                        android:textColor="#5E5E5E"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/amount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$9.99"
                        android:textColor="#000000"
                        android:textSize="14dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="0"
                android:layout_gravity="fill"
                android:layout_margin="15dp"
                app:cardBackgroundColor="#F6F6F6"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">

                    <ImageView
                        android:id="@+id/logoImage2"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:src="@drawable/amazon_prime_logo" />

                    <TextView
                        android:id="@+id/appName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prime"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/category2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entertainment"
                        android:textColor="#5E5E5E"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/amount2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$9.99"
                        android:textColor="#000000"
                        android:textSize="14dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="0"
                android:layout_gravity="fill"
                android:layout_margin="15dp"
                app:cardBackgroundColor="#F6F6F6"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">

                    <ImageView
                        android:id="@+id/logoImage3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/spotify_logo" />

                    <TextView
                        android:id="@+id/appName3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spotify"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/category3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Music"
                        android:textColor="#5E5E5E"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/amount3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$9.99"
                        android:textColor="#000000"
                        android:textSize="14dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="0"
                android:layout_gravity="fill"
                android:layout_margin="15dp"
                app:cardBackgroundColor="#F6F6F6"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">

                    <ImageView
                        android:id="@+id/logoImage4"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/google_play_logo" />

                    <TextView
                        android:id="@+id/appName4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Google Play"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/category4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Utility"
                        android:textColor="#5E5E5E"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/amount4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$9.99"
                        android:textColor="#000000"
                        android:textSize="14dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="0"
                android:layout_gravity="fill"
                android:layout_margin="15dp"
                app:cardBackgroundColor="#F6F6F6"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">

                    <ImageView
                        android:id="@+id/logoImage5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/youtube_music_logo" />

                    <TextView
                        android:id="@+id/appName5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YT Music"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/category5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Music"
                        android:textColor="#5E5E5E"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/amount5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$9.99"
                        android:textColor="#000000"
                        android:textSize="14dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="0"
                android:layout_gravity="fill"
                android:layout_margin="15dp"
                app:cardBackgroundColor="#F6F6F6"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">

                    <ImageView
                        android:id="@+id/logoImage6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/github_logo" />

                    <TextView
                        android:id="@+id/appName6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Github Pro"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/category6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Developer"
                        android:textColor="#5E5E5E"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/amount6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$9.99"
                        android:textColor="#000000"
                        android:textSize="14dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </GridLayout>

    </HorizontalScrollView>


    <TextView
        android:id="@+id/activeSubscriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="135dp"
        android:text="Active Subscription"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/atm_card" />

    <TextView
        android:id="@+id/viewAllText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="135dp"
        android:text="View all"
        android:textColor="#2196F3"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/atm_card" />

</androidx.constraintlayout.widget.ConstraintLayout>